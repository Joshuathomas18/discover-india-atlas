// Firebase Storage Security Rules for India Cultural Atlas
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Images stored in organized folder structure
    match /states/{stateId}/places/{placeId}/categories/{category}/{fileName} {
      allow read: if true; // Public read access for all images
      allow write: if false; // No public write access (admin only)
    }
    
    // Banner images for states and places
    match /banners/{fileName} {
      allow read: if true; // Public read access
      allow write: if false; // No public write access (admin only)
    }
    
    // Temporary uploads folder (for admin use)
    match /temp/{fileName} {
      allow read, write: if false; // Admin only access
    }
  }
}
